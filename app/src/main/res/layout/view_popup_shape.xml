<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/shape1"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:background="@drawable/toolbox_selector"
        android:scaleType="fitXY"
        android:src="@drawable/ic_path" />

    <ImageView
        android:id="@+id/shape2"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/toolbox_selector"
        android:scaleType="fitXY"
        android:src="@drawable/ic_line" />

    <ImageView
        android:id="@+id/shape3"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/toolbox_selector"
        android:scaleType="fitXY"
        android:src="@drawable/ic_circle" />

    <ImageView
        android:id="@+id/shape6"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/toolbox_selector"
        android:scaleType="fitXY"
        android:src="@drawable/ic_oval" />

    <ImageView
        android:id="@+id/shape4"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/toolbox_selector"
        android:scaleType="fitXY"
        android:src="@drawable/ic_square" />

    <ImageView
        android:id="@+id/shape5"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/toolbox_selector"
        android:scaleType="fitXY"
        android:src="@drawable/ic_rect" />

</LinearLayout>